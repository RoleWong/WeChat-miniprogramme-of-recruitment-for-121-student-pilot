page{
  width: 100%;
  height: 100%;
  background-color: #111111;
}

.header{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 50rpx 0 70rpx 0; 
}

.title{
  margin: 20rpx 0 20rpx 0;
  color:#ffffff;
  font-weight: bold;
  font-size: 38rpx; 
  text-align: center;
}

.remind{
  font-size: 27rpx;
  color:#ffffff;
  width:80%;
  margin-left:10%;
}

.remindback{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  align-items: center;
  padding:10rpx 80rpx 10rpx 50rpx;
}

.remind-icon{
  padding: 50rpx 30rpx 50rpx 30rpx;
}

.remind-text{
  color: #ffffff;
  font-size:30rpx;
}

.reason{
  display: flex;
  flex-direction: row;
  padding:5rpx 65rpx 5rpx 65rpx;
  /* border-bottom:#ffc6db solid 1px; */
  color:#ffffff;
}

.reasonIndex{
  color:#a91f51;
  font-weight: bold;
  width:5%;
  padding-right: 10rpx;
}

.bottom{
  margin-bottom: 100rpx;
  color:#222222;
}

.darkModeBlock{
  background-color: #222222;
  color:#ffffff
}

.darkModeBlock_remind{
  background-color: #222222;
  color:#ffffff;
  font-size:27rpx;
  padding: 20rpx 0 0 28rpx;
}


.button{
  background-color: #222222;
  color:#ffffff;
}

.buttonHover{
  background-color: #333333;
  color:#ffffff;
}