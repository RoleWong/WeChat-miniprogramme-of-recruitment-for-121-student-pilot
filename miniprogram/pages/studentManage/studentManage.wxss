page {
  height: 100%;
  width: 100%;
  background-color: #fff;
}

.header {
  width: 100%;
  overflow: visible;
}

.numberBox {
  background-color: #f8f8f8;
  height: 100rpx;
  position: relative;
  margin-top: -13rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  align-items: center;
}

.item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  align-items: center;
  width: 33.33%;
  border-left: 1rpx solid #dfdfdf;
  margin-bottom: 20rpx;
}

.item-number {
  font-size: 31rpx;
  font-weight: bold;
  color: #7a4a33;
}

.item-text {
  font-size: 24rpx;
  color: #888;
}

.control {
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}

.control-item-left {
  width: 50%;
  margin-left: 20rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.control-item-right {
  width: 50%;
  margin-left: 10rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.content {
  margin: 20rpx 0 20rpx 0;
  width: 100%;
  background-color: #fff;
}

.content-block {
  margin: 25rpx 0 25rpx 0;
}

.content-block-title {
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  color: #7a4a33;
  width: 60%;
  margin-left: 20%;
  border-bottom: 1rpx solid #d4d4d4;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.content-block-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  justify-content: start;
  background-color: #fafafa;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin: 20rpx;
  margin-bottom: 20rpx;
}

.content-block-item-line1 {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  align-items: center;
  padding: 5rpx 10rpx 5rpx 10rpx;
}

.content-block-item-line1-name {
  color: #7a4a33;
  font-size: 27rpx;
  padding-right: 20rpx;
  font-weight: bold;
}

.content-block-item-line1-session {
  font-size: 27rpx;
  color: #353535;
}

.content-block-item-line23 {
  font-size: 23rpx;
  color: #888;
  padding: 0rpx 10rpx 5rpx 10rpx;
}

.details-box{
  width:80%;
  height:80%;
  position: fixed;
  top:10%;
  left:10%;
  background-color: #ffffff;
  z-index:101;
  opacity: 1;
  border-radius: 30rpx;
  overflow: scroll;
  -webkit-overflow-scrolling: touch
}

.box-title{
  margin:40rpx 0 40rpx 40rpx;
  font-size:40rpx;
  color:#353535;
  font-weight: bold;
}

.mask{
    background-color:#000000;
  opacity:0.65;
  width:100%;
  height:100%;
  position:fixed;
  z-index:100;
  top:0;
  left:0;
}

.photo{
  width:100%;
}